{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "snaplog",
  "outputfilename": "snaplog",
  "frontend:install": "npm install",
  "frontend:build": "npm run build",
  "frontend:dev:watcher": "npm run dev",
  "frontend:dev:serverUrl": "auto",
  "author": {
    "name": "Pritish",
    "email": "pritish1998thombare@gmail.com"
  },
  "build": {
    "cgo": false,
    "platforms": {
      "darwin": {
        "icon": "assets/icons/appicon.png",
        "bundle": "io.pritish.snaplog",
        "entitlements": "assets/darwin/entitlements.plist",
        "developerid": "Developer ID Application: Pritish Narendra Thombare (39B7GLKL6D)",
        "notarize": {
          "file": "snaplog.app",
          "keyid": "$NOTARY_KEY_ID",
          "issuer": "$NOTARY_ISSUER_ID",
          "key": "$NOTARY_P8_PATH"
        }
      },
      "linux": {
        "icon": "assets/icons/appicon.png"
      },
      "windows": {
        "icon": "assets/icons/icon.ico"
      } 
    }
  }
}
